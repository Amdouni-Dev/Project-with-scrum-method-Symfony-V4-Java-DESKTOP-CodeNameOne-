{% extends 'views/layouts/contentLayoutMaster.html.twig' %}

{% block title %} User List {% endblock %}

{% block vendor_style %}
    <link rel="stylesheet" href="{{ asset('vendors/css/forms/select/select2.min.css') }}">
{% endblock %}


{% block page_style %}
    <link rel="stylesheet" href="{{ asset('css/base/plugins/forms/form-validation.css') }}">
{% endblock %}


{% block content %}
    <!-- users list start -->

    <section class="app-user-list">
        <div class="row">
            <div class="col-lg-3 col-sm-6">
                <div class="card">
                    <div class="card-body d-flex align-items-center justify-content-between">
                        <div>
                            <h3 class="fw-bolder mb-75">{{ count }}</h3>
                            <span>Total Conversations</span>
                        </div>
                        <div class="avatar bg-light-primary p-50">
            <span class="avatar-content">
              <i data-feather="user" class="font-medium-4"></i>
            </span>
                        </div>
                    </div>
                </div>
            </div>




        <!-- list and filter start -->
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Manage Conversations</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-1">
        <span class="card-text">
          You can view, create or update Conversations in the table below.
        </span>
                        {# {{ url('Conversation_Add') }} #}
                        <a class="btn btn-primary waves-effect waves-float waves-light" href="#">Add</a>
                    </div>

                    <div class="table-responsive row">
                <div class="table-responsive row">



                </div>
                        {% for conversation in conversations %}
                <div class="table-responsive row">
                    <table class="table table-hover">

                        <tbody>

                            <tr>
                                <td>

                                    <div class="d-flex justify-content-left align-items-center">
                                        <div class="avatar-wrapper">
                                            <div class="avatar me-1">

                                            </div>
                                        </div>
                                        <div class="d-flex flex-column">
                                            <a href="https://pixinvent.com/demo/vuexy-bootstrap-laravel-admin-template/demo-1/app/user/view/account"
                                               class="user_name text-truncate text-body">
                                                <span class="fw-bolder fs-6">{{ conversation.email }}</span>
                                            </a>
                                            <small class="emp_post text-muted">{{  conversation.email2 }}</small>
                                        </div>
                                    </div>

                                </td>


                                <td>

                                    <div class="d-flex flex-column">
                                        {{ conversation.user1 }}
                                    </div>
                                    <div class="d-flex flex-column">
                                        {{ conversation.user2 }}
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex">
{# url("modify_conversation", {id: conversation.id})url("modify_conversation", {id: conversation.id}) #}
                                        <a href="#">
                                            <i data-feather="edit-2" class="me-50"></i>
                                        </a>
{# url("modify_conversation", {id: conversation.id}) #}
                                        <a href=" #">
                                            <i data-feather="trash" class="me-50"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
            {% endfor %}
        <!-- list and filter end -->
    </section>
    <!-- users list ends -->
{% endblock %}


{% block vendor_script %}
    <script src="{{ asset('vendors/js/forms/select/select2.full.min.js') }}"></script>
    <script src="{{ asset('vendors/js/tables/datatable/jszip.min.js') }}"></script>
    <script src="{{ asset('vendors/js/tables/datatable/vfs_fonts.js') }}"></script>
    <script src="{{ asset('vendors/js/tables/datatable/buttons.html5.min.js') }}"></script>
    <script src="{{ asset('vendors/js/tables/datatable/buttons.print.min.js') }}"></script>
    <script src="{{ asset('vendors/js/forms/validation/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('vendors/js/forms/cleave/cleave.min.js') }}"></script>
    <script src="{{ asset('vendors/js/forms/cleave/addons/cleave-phone.us.js') }}"></script>
{% endblock %}


{% block page_script %}
    <script src="{{ asset('js/scripts/pages/app-user-list.js') }}"></script>
{% endblock %}