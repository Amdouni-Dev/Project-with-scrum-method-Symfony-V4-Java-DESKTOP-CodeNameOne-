{% extends 'views/layouts/contentLayoutMaster.html.twig' %}

{% block title %}
  {{ 'Create a Group' }}
{% endblock %}

{% block vendor_style %}
  <link rel="stylesheet" href="{{ asset('vendors/css/forms/select/select2.min.css') }}">
{% endblock %}
{% block page_style %}
  <link rel="stylesheet" href="{{ asset('css/base/plugins/forms/form-validation.css') }}">
{% endblock %}

{% block content %}
  <h3>Add Group</h3>
  <p>Groups encapsulate a set of users and permissions for fast and easy management.</p>

  <div class="card">
    <div class="card-header">
      <h4 class="card-title">Group Details</h4>
    </div>
    <div class="card-body">
      {{ form_start(form, {'attr':{'novalidate':'novalidate', 'method': 'POST'}} ) }}
      <div class="row">
        <div class="col-md-6 col-12">
          {{ form_row(form.security_title) }}
        </div>
        <div class="col-md-6 col-12">
          {{ form_row(form.display_name) }}
        </div>
      </div>
      <div class="row my-2">
        <div class="col-md-6 col-12">
          {{ form_row(form.members) }}
        </div>
        <div class="col-md-6 col-12">
          {{ form_row(form.permissions) }}
        </div>
      </div>
      <div class="row my-2">
        <div class="col-md-6 col-12">
          {{ form_row(form.enjoyable_services) }}
        </div>
        <div class="col-md-6 col-12">
          {{ form_row(form.provided_services) }}
        </div>
      </div>
      <div class="row my-2">
        <div class="col-md-6 col-12">
          {{ form_row(form.groupType) }}
        </div>
        <div class="col-md-6 col-12">
          &nbsp;
        </div>
      </div>
      <div class="row">
        <div class="d-flex justify-content-end gap-1 mt-1">
          {{ form_widget(form.reset) }}
          {{ form_widget(form.save) }}
        </div>
      </div>
      {{ form_end(form) }}
    </div>
  </div>

{% endblock %}

{% block vendor_script %}
  <script src="{{ asset('vendors/js/forms/validation/jquery.validate.min.js') }}"></script>
  <script src="{{ asset('vendors/js/forms/select/select2.full.min.js') }}"></script>

{% endblock %}
{% block page_script %}
  <script src="{{ asset('js/scripts/pages/app-access-permission.js') }}"></script>
  <script src="{{ asset('js/scripts/forms/form-select2.js') }}"></script>
{% endblock %}
